{{! Comments }}
<div class="card">
    <div class="card-header bi bi-chat-dots"> {{#boardComments.size}}{{boardComments.size}}{{/boardComments.size}} Comments</div>
    {{! 댓글내용 부분 }}
    <ul class="list-group-flush">
        {{#boardComments}}
            <li id="comments-{{members}}" class="list-group-item">
                <span>
                    <span style="font-size: small">{{members}}</span>
                    <span style="font-size: xx-small">{{regDate}}</span>
                </span>
                {{#isWriter}}
                    <a type="button" data-toggle="collapse" data-target=".multi-collapse-{{members}}"
                       class="bi bi-pencil-square"></a> {{! 댓글 수정 버튼 }}
                    <a type="button" onclick="main.commentDelete({{members}})"
                       class="bi bi-x-square"></a> {{! 댓글 삭제 버튼 }}
                {{/isWriter}}

                {{! 댓글 내용 보기 }}
                <p class="collapse multi-collapse-{{members}} show">{{boardCommentNum}}</p>

                {{! 댓글 내용 수정 }}
                <form class="collapse multi-collapse-{{members}}">
                    <input type="hidden" id="id" value="{{members}}">
                    <div class="form-group">
                        <textarea class="form-control" id="comment-content" rows="3">{{boardCommentNum}}</textarea>
                    </div>
                    <button type="button" id="btn-comment-update" class="btn btn-outline-primary bi bi-pencil-square"> 수정</button>
                </form>
            </li>
        {{/boardComments}}
    </ul>
</div>
<br/>